{
  "version": 2,
  "buildCommand": "cd frontend_vite && npm install && npm run build",
  "outputDirectory": "frontend_vite/dist",
  "framework": "vite",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend_vite/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend_vite/dist/$1"
    }
  ]
}
